@model HairSalon.Models.Client

@{
    Layout = "_Layout";
}

<h4>Add a new client</h4>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.StylistId, "Stylist")
        @Html.DropDownList("StylistId", null, "Select a Stylist", htmlAttributes: new { @class = "form-control" })
    </div>

    <input type="submit" value="Add new client" class="btn btn-default" />
}

<p>@Html.ActionLink("Show all clients", "Index")</p>
